<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="java_coverage_tests" verbose="1" parallel="classes">
    <listeners>
        <listener class-name="org.testng.reporters.JUnitXMLReporter" />
    </listeners>

    <test name="coverage-test-report" parallel="methods" thread-count="8">
        <groups>
            <run>
                <exclude name="native"/>
                <exclude name="mobile"/>
            </run>
        </groups>
        <packages>
            <package name="coverage.generic.*"/>
        </packages>
    </test>
</suite>